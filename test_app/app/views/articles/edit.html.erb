<h1>Edit existing article</h1>

<%= form_for @article do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, size: "60x12" %>
</p>
  <%= f.submit "Update article" %>
<% end %>

<%= link_to "Back to articles", articles_path %>